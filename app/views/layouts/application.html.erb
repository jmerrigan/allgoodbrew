<!DOCTYPE html>
<html>
  <head>
    <title>All Good Brew</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <img src="/assets/agb-logo.svg">
      <% if user_signed_in? %>
            Welcome, <%= current_user.first_name %> <%= current_user.last_name %> 
              <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "button") %> 
              <%= link_to 'My Purchases', mypurchases_path, :class => "button" %> 
            <% unless current_user.shop_profile.nil? %> 
                <%= link_to 'My Shop', shop_profile_path([current_user.shop_profile]), :class => "button" %> 
              <% else %>
                <%= link_to 'Create A Shop', edit_shop_profile_path(current_user, :class => "button") %>
              <% end %>
      <% else %>
            <%= link_to('Login', new_user_session_path, :class => "button")  %>        
      <% end %>
   </nav>


      <div id="all-option">
      <%= link_to 'View All Shops', shop_profiles_path %>
      <%= link_to 'View All Products', products_path %>
      </div>

      <div id="search">
      <%= form_tag(products_search_path, method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
      <% end %>
      </div>

  
    <%= yield %>
   <p> <%= link_to 'Back', :back %> </p>
  </body>
</html>
