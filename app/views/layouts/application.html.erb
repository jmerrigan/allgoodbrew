<!DOCTYPE html>
<html>
  <head>
    <title>All Good Brew</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <p>
        Welcome, <%= current_user.first_name %> <%= current_user.last_name %> 
        (<%= link_to('Logout', destroy_user_session_path, method: :delete) %>) 
        <%= link_to 'My Purchases' %> 
        <% unless current_user.shop_profile.nil? %>  
          <%= link_to 'My Shop', shop_profile_path([current_user.shop_profile]) %> 
        <% end %>
      <% else %>
        <%= link_to('Login', new_user_session_path)  %>
        </p>
      <% end %>
      <p>
      <%= link_to 'View All Shops', shop_profiles_path %>
      <%= link_to 'View All Products', products_path %>
      </p>
    </nav>
    <%= yield %>
  </body>
</html>
