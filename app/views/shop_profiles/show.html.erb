<div class="shops">

  <div class="all-shops">

    <div id="shop-view">

      <li id="shop-name-view"><%=  @shop_profile.business_name %></li>
      <br>
      <li class="location"><%= @shop_profile.location %></li>            
      <li class="about"><%= @shop_profile.about %></li>
      <li class="contact"><%= @shop_profile.contact_number %></li>
       <br>
      <% if current_user == @shop_profile.user %>
        <div class="edit"> <%= link_to 'edit', edit_shop_profile_path(@shop_profile)%> </div>
      <% end %>

    </div>

  </div>

  <br>

  <% if current_user == @shop_profile.user %>

    <div class="edit-links">
      <p><%= link_to 'New Product', new_product_path %></p>
      <p><%= link_to 'My Shop Orders', profile_orders_path %></p>
      <p><%= link_to 'My Products', profile_products_path %></p> 
    </div> 

  <% else %>

    <p class="title">Products</p>
    <br><br>

    <div class="all-products">
    
      <% @shop_profile.products.each do |product| %>

        <div class="product">
          <li> <%= link_to image_tag(product.image, width: '100%', height: '200'), product %></li>
          <li class="product-name"><%= link_to product.name, product %></li>
          <li class="price"><%= product.price %></li>
          <li class="business-name"><%= product.shop_profile.business_name %></li>
          <li class="style"><%= product.style.name %></li>
          <li class="description"><%= product.description %></li>
        </div>  
        
        <% end %>

    </div>

  <% end %>

</div>



