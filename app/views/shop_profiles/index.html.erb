<p id="notice"><%= notice %></p>

<h1>Shop Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>About</th>
      <th>Location</th>
      <th>Contact number</th>
      <th>Business name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_profiles.each do |shop_profile| %>
      <tr>
        <td><%= shop_profile.user %></td>
        <td><%= shop_profile.about %></td>
        <td><%= shop_profile.location %></td>
        <td><%= shop_profile.contact_number %></td>
        <td><%= shop_profile.business_name %></td>
        <td><%= link_to 'Show', shop_profile %></td>
        <td><%= link_to 'Edit', edit_shop_profile_path(shop_profile) %></td>
        <td><%= link_to 'Destroy', shop_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop Profile', new_shop_profile_path %>
