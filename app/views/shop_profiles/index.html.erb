<p id="notice"><%= notice %></p>

<h1>Shop Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>About</th>
      <th>Location</th>
      <th>Contact number</th>
      <th>Business name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_profiles.each do |shop_profile| %>

      <% unless shop_profile.business_name.nil? %>
        <tr>
          <td><%= link_to shop_profile.business_name, shop_profile%></td>
          <td><%= shop_profile.about %></td>
          <td><%= shop_profile.location %></td>
          <td><%= shop_profile.contact_number %></td>
          <td><%= shop_profile.business_name %></td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>




  
