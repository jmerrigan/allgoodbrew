<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Shop:</strong>
  <%= @product.shop_profile.business_name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @product.style.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <%= image_tag @product.image, width: '300' %>
</p>
<% if current_user == @product.shop_profile.user %>
  <%= link_to 'Edit', edit_product_path(@product) %> 
<% end %>

