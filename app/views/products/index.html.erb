<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th> </th>
      <th>Name</th>
      <th>Price</th>
      <th>Shop</th>
      <th>Style</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= link_to image_tag(product.image, width: '100'), product %>
        <td><%= link_to product.name, product %></td>
        <td><%= product.price %></td>
        <td><%= product.shop_profile.business_name %></td>
        <td><%= product.style.name %></td>
        <td><%= product.description %></td>
        <% if current_user == product.shop_profile.user %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

