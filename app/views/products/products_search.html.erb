 
<% @products.each do |prod| %>
  <% prod.each do |product| %>
    <p>
      <tr>
        <td> <%= link_to image_tag(product.image, width: '100'), product %>
        <td><%= link_to product.name, product %></td>
        <td><%= number_to_currency(product.price/100.0) %></td>
        <td><%= product.shop_profile.business_name %></td>
        <td><%= product.style.name %></td>
        <td><%= product.description %></td>
        <% if current_user == product.shop_profile.user %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    </p>
  <% end %>
<% end %>